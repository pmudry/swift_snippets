{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run current snippet",
            "type": "shell",
            "command": "swift run ${fileBasenameNoExtension}",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            // "dependsOn": "Build current snippet",
            "isBackground": false,
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "revealProblems": "onProblem",
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            }
        }
    ]
}